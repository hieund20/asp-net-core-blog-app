@model IEnumerable<Blog.UI.Models.DTO.PostTagDto>

@{
}

<h3 class="mt-3">Danh sách bài viết - nhãn dán</h3>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="PostTags" asp-action="Add">Thêm bài viết - nhãn dán</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>PostId</th>
            <th>Tên bài viết</th>
            <th>TagId</th>
            <th>Tên nhãn dán</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var postTag in Model)
        {
            <tr>
                <td>@postTag.PostId</td>
                <td>@postTag?.Post?.Title</td>
                <td>@postTag.TagId</td>
                <td>@postTag?.Tag?.Name</td>
                <td>
                    <a asp-controller="PostTags"
                       asp-action="Edit"
                       asp-route-id="@postTag.PostId"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
