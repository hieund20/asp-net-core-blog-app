@model Blog.UI.Models.AddPostTagViewModel;


@{
}

<h3 class="mt-3">Thêm bài viết - nhãn dán</h3>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Bài viết</label>
        <select class="form-control" asp-for="SelectedPostId">
            @foreach (var post in Model.Posts)
            {
               <option value="@post.PostId">@post.Title</option>
            }
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Nhãn dán</label>
        <select class="form-control" asp-for="SelectedTagId">
            @foreach (var post in Model.Tags)
            {
                <option value="@post.TagId">@post.Name</option>
            }
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Lưu bài viết nhãn dán</button>
    </div>
</form>
