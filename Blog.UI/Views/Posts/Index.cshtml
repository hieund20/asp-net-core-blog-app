@model IEnumerable<Blog.UI.Models.DTO.PostDto>

@{
}

<h3 class="mt-3">Danh sách bài viết</h3>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="Posts" asp-action="Add">Thêm bài viết</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.PostId</td>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedDate</td>
                <td>
                    <a asp-controller="Posts"
                       asp-action="Edit"
                       asp-route-id="@post.PostId"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>


