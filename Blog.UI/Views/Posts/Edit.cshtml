@model Blog.UI.Models.DTO.PostDto

@{
}

<h1 class="mt-3">Chỉnh sửa bài viết</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">PostId</label>
            <input type="text" class="form-control" asp-for="PostId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Ngày tạo</label>
            <input type="text" class="form-control" asp-for="CreatedDate" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Ngày chỉnh sửa</label>
            <input type="text" class="form-control" asp-for="UpdatedDate" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Tiêu đề</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Nội dung</label>
            <textarea id="editor" asp-for="Content"></textarea>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-secondary">Lưu</button>

            <button type="submit"
                    asp-controller="Posts"
                    asp-action="Delete"
                    class="btn btn-danger">
                Xóa
            </button>
        </div>
    </form>

    <div class="text-center">
        <script src="~/assets/vendor/ckeditor5-41.2.0-o5j5qkhs2miq//build/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'), {
                    codeBlock: {
                        languages: [
                            { language: 'css', label: 'CSS' },
                            { language: 'plaintext', label: 'Plain text', class: '' },
                            { language: 'html', label: 'HTML' },
                            { language: 'php', label: 'PHP', class: 'php-code' },
                            { language: 'javascript', label: 'JavaScript', class: 'js javascript js-code' },
                            { language: 'python', label: 'Python' }
                        ]
                    }
                })
                .catch(error => {
                    console.error(error);
                });
        </script>
    </div>

}





