@model Blog.UI.Models.AddPostViewModel

@{
}

<h3 class="mt-3">Thêm bài viết</h3>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Tiêu đề</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Nội dung</label>
        <input type="text" class="form-control" asp-for="Content" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Lưu bài viết</button>
    </div>
</form>
