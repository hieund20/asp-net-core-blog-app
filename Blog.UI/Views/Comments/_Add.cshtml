@model Blog.UI.Models.AddCommentViewModel

@{
}

<h4 class="mt-3">Thêm bình luận</h4>

<form method="post" asp-action="Add" asp-controller="Comments">
    <div class="mt-3">
        <label class="form-label">Nội dung</label>
        <input type="text" class="form-control" asp-for="Content" />
    </div>

    <div class="mt-3">
        <label class="form-label">PostId</label>
        <input readonly type="text" class="form-control" asp-for="PostId"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Lưu bình luận</button>
    </div>
</form>


