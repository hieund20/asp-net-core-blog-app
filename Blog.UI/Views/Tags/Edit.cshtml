@model Blog.UI.Models.DTO.TagDto

@{
}

<h1 class="mt-3">Chỉnh sửa nhãn dán</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">TagId</label>
            <input type="text" class="form-control" asp-for="TagId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Tên nhãn</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-secondary">Lưu</button>

            <button type="submit"
                    asp-controller="Tags"
                    asp-action="Delete"
                    class="btn btn-danger">
                Xóa
            </button>
        </div>
    </form>
}

