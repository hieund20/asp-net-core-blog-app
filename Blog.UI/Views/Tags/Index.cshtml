@model IEnumerable<Blog.UI.Models.DTO.TagDto>

@{
}

<h3 class="mt-3">Danh sách nhãn</h3>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="Tags" asp-action="Add">Thêm nhãn</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên nhãn</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.TagId</td>
                <td>@tag.Name</td>
                <td>
                    <a asp-controller="Tags"
                       asp-action="Edit"
                       asp-route-id="@tag.TagId"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
